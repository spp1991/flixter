<div class="booyah-box col-10 offset-1">
  <h2 style="color:black">Add a new course</h2>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
  <% end %>
  <br />
</div>